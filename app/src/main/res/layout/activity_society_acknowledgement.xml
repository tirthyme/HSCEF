<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SocietyAcknowledgement">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oops!! You Haven't joined a society Yet\nJoin One Or Create Now"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_gravity="top|center"/>

        <EditText
            android:id="@+id/txt_soc_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Society ID" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_socJoin"
        android:text="Join a Society By ID"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a society\nCreated society will be linked to this user"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <EditText
            android:id="@+id/txt_soc_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Society Name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create a Unique Society Code for Other Users to Join" />

        <EditText
            android:id="@+id/etxt_soc_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Society ID" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/validation"
            android:text="Validation"/>
        <Button
            android:layout_width="match_parent"
            android:id="@+id/btn_CreateSoc"
            android:layout_height="wrap_content"
            android:text="Create a society"/>

    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>